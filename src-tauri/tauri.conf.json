{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "[APP_NAME]",
  "version": "0.1.0",
  "identifier": "[APP_ID]",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "[APP_NAME]",
        "width": 1200,
        "height": 800,
        "url": "[APP_URL]",
        "label": "main",
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
